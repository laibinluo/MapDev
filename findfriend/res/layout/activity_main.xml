<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        
			<LinearLayout
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:orientation="horizontal">
				  
			        <EditText android:id="@+id/longitude"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:text=" 121.518150" 
			            />
			        
			       	<EditText   android:id="@+id/latitude"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:text="31.206055" 
			            />
			</LinearLayout>
			
			<LinearLayout
				  android:layout_width="fill_parent"
				  android:layout_height="wrap_content"
				  android:orientation="horizontal">
				  
			        <Button android:id="@+id/bus"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:text="公交" 
			            />
			        
			       	<Button   android:id="@+id/car"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_weight="3"
			            android:text="自驾" 
			            />
			       	
			       	<Button
					    android:id="@+id/walking" 
					    android:layout_width="wrap_content"
					    android:layout_height="match_parent"
					    android:layout_weight="1"
					    android:text="步行" 
					    />
			</LinearLayout>
	        
	        <com.baidu.mapapi.map.MapView android:id="@+id/bmapsView"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:clickable="true" />
</LinearLayout>
